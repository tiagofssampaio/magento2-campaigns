<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <container name="campaign.description" htmlTag="div" htmlClass="campaign-description">
                <block class="TiagoSampaio\Campaigns\Block\Campaign\View"
                       name="campaign.description.content"
                       template="TiagoSampaio_Campaigns::campaign/description.phtml"
                       cacheable="false"
                />
            </container>
            <container name="campaign.description" htmlTag="div" htmlClass="campaign-products">
                <block class="TiagoSampaio\Campaigns\Block\Campaign\View"
                       name="campaign.products.content"
                       template="TiagoSampaio_Campaigns::campaign/products.phtml"
                       cacheable="false"
                />
            </container>
        </referenceContainer>
    </body>
</page>
